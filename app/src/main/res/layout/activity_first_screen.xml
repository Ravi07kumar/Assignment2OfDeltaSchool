<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity.FirstScreenActivity">

  <TextView
      android:id="@+id/tv_splash_message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/splash_tv_message"
      android:layout_centerInParent="true"
      android:textSize="@dimen/tv_large"
      android:textColor="@color/colorGreen"
      android:background="@drawable/custom_stoke_btn"
      android:gravity="center"
      android:layout_marginEnd="@dimen/btn_margin_end"
      android:paddingTop="@dimen/tv_padding_top"
      android:paddingBottom="@dimen/tv_padding_bottom"
      />

</RelativeLayout>