<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    android:background="@color/colorGreen"
    >

    <TextView
        android:id="@+id/tv_tool_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tool_text_home"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/tv_large"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/tv_tool_grid"
        android:layout_width="@dimen/icon_layout_width"
        android:layout_height="@dimen/icon_layout_height"
        android:background="@drawable/ic_grid_on_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/comm_layout_margin_end"
        />
    <TextView
        android:id="@+id/tv_tool_sort"
        android:layout_width="@dimen/icon_layout_width"
        android:layout_height="@dimen/icon_layout_height"
        android:background="@drawable/ic_sort_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/icon_tool_margin_end"
        />

    <TextView
        android:id="@+id/tv_tool_back"
        android:layout_width="@dimen/icon_layout_width"
        android:layout_height="@dimen/icon_layout_height"
        android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/icon_tool_margin_end"
        android:layout_marginStart="@dimen/btn_sec_margin_start"
        />
</RelativeLayout>